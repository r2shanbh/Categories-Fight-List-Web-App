<%- include("partials/header") -%>

<div class>
  <div class="box">
    <h1>Create new Game </h1>
  </div>
  <form class = "page-options" action="/newGame" method="post">
    <input type="text" name="newGameCategory" placeholder="Enter Category" autocomplete="off">
    <button type="submit">Enter Game </button>
  </form>

</div>

<div class>
  <div class="box">
    <h1">Enter Game </h1>
  </div>
  <form class = "page-options" action="/enterGame" method="post">
    <input type="text" name="gameCode" placeholder="Enter Game Code" autocomplete="off">
    <input type="text" name="username" placeholder="Enter name" autocomplete="off">
    <button type="submit">Enter Game </button>
  </form>
</div>
<%- include("partials/footer") -%>
