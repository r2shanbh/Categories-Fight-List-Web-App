<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title>Fight List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>

<body>
  <nav class="navbar navbar-light bg-info">
    <img src="//fightlist.info/template/images/favicon.png">
    <span class="navbar-brand mb-0 h1">Fight List</span>
  </nav>

  <div style= "margin : 3rem">
    <h3> Current Matches</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col"># </th>
          <th scope="col">Category </th>
          <th scope="col">Game Code</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i=0; i< activeGames.length; i++) { %>
          <tr>
            <th scope="row"><%= (i+1) %> </th>
            <td><%= activeGames[i].category %></td>
            <td><%= activeGames[i].code %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <div style= "margin : 3rem">
    <form class = "page-options" action="/newGame" method="post">
      <div class="input-group">
        <span class="input-group-text">New Game</span>
        <input type="text" name="newGameCategory" placeholder="Enter Category" autocomplete="off">
        <button type="submit"> + </button>
      </div>
    </form>

  </div>

  <div style= "margin : 3rem">
    <form class = "page-options" action="/enterGame" method="post">
      <div class="input-group">
        <span class="input-group-text">Enter Game</span>
        <input type="text" name="gameCode" placeholder="Enter Game Code" autocomplete="off" class="form-control">
        <input type="text" name="username" placeholder="Enter name" autocomplete="off" class="form-control">
        <button type="submit"> + </button>
      </div>
    </form>
  </div>
<%- include("partials/footer") -%>
